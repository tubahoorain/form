  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      text-align: center;
      background-color: #f4f4f4;
      padding: 40px;
    }

    h2 {
      color: #333;
    }

    #panel {
      width: 60%;
      margin: 20px auto;
      padding: 20px;
      background-color: #2196F3;
      color: white;
      font-size: 18px;
      border-radius: 10px;
      display: none;
      box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }

    button {
      margin: 10px;
      padding: 12px 20px;
      font-size: 16px;
      background-color: #333;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background-color: #555;
    }

    #toggleIcon {
      font-size: 20px;
      margin-left: 10px;
    }

    #status {
      margin-top: 10px;
      font-weight: bold;
      color: green;
    }
